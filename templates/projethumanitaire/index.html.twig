<section id="top" class="pa-hero pa-blog-hero pa-centered-section pa-image-back position-relative" style="padding: 80px;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="card" style="width: 70%; height: 100%;">
                    <img src="assets/images/huma2.jpg" alt="image de hamza" class="card-img-top" style="width: 100%; height: 100%;">
                </div>
